<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1080px"
    android:layout_height="match_parent"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:scrollbars="none"
    android:scrollbarSize="0dp"
    tools:context=".ContactManager">

    <RelativeLayout
        android:id="@+id/LMheader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#BF808285"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/LiquidManagerHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#BCBEC0"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:textSize="11pt"
            android:textStyle="bold"
            android:text="LiquidConnect"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

    <ListView
        android:id="@+id/contactListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:fastScrollEnabled="false"
        android:layout_below="@+id/LMheader"
        android:layout_above="@+id/btnNewText" />

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#BF808285"
        android:layout_below="@+id/contactListView">

    </RelativeLayout>


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:text="Text"
        android:textStyle="bold"
        android:onClick="clear"
        android:textSize="12pt"
        android:background="@drawable/text_input_background"
        android:textColor="@color/contact_name"
        android:id="@+id/btnNewText"
        android:translationY="-10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="Email"
        android:textStyle="bold"
        android:onClick="clear"
        android:textSize="12pt"
        android:background="@drawable/text_input_background"
        android:textColor="@color/contact_name"
        android:id="@+id/btnNewEmail"
        android:translationY="-10dp"
        android:translationX="85dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:text="Call"
        android:textStyle="bold"
        android:onClick="clear"
        android:textSize="12pt"
        android:background="@drawable/text_input_background"
        android:textColor="@color/contact_name"
        android:id="@+id/btnNewCall"
        android:translationY="-10dp"
        android:translationX="-100dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:text="Social"
        android:textStyle="bold"
        android:onClick="clear"
        android:textSize="12pt"
        android:background="@drawable/text_input_background"
        android:textColor="@color/contact_name"
        android:id="@+id/btnNewSocial"
        android:translationY="-10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>





</RelativeLayout>
